- header "Listing pages"

%table.organizable
  %thead
    %tr
      %th Title
      %th Permalink
      %th Format
      %th Published
      %th Cached slug
      %th Allow comments
      %th Allow pings
      %th{ :colspan => 3 }
  
  %tbody.me
    - for page in @pages
      %tr{ :class => cycle(:odd, :even), :id => "page-#{page.id}" }
        %td= page.title
        %td= page.cached_slug
        %td= page.format
        %td= page.published
        %td= page.cached_slug
        %td= page.allow_comments
        %td= page.allow_pings
        %td= link_to 'Show', page_path(page)
        %td= link_to 'Edit', edit_admin_page_path(page.id)
        %td= link_to 'Destroy', admin_page_path(page.id), :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New page', new_admin_page_path
