- header "Listing quotes"

%table
  %thead
    %tr
      %th User
      %th Body
      %th{ :colspan => 3 }
  
  %tbody
    - for quote in @quotes
      %tr{ :class => cycle(:odd, :even) }
        %td= quote.user_id
        %td= quote.body
        %td= link_to 'Show', quote
        %td= link_to 'Edit', edit_quote_path(quote)
        %td= link_to 'Destroy', quote, :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New quote', new_quote_path
